{% extends 'base.html.twig' %}

{% block title %}Projets - TaskLinker
{% endblock %}
{% block page_title %}Projets
{% endblock %}

{% block body %}

	<div id="content">
		<div
			class="projets-grid">
			{# Carte "Ajouter un projet" (visible admin seulement) #}
			{% if is_granted('ROLE_ADMIN') %}
				<a class="projet-card add-projet" href="{{ path('projet_new') }}">
					+ Ajouter un projet
				</a>
			{% endif %}

			{# Liste des projets #}
			{% for projet in projets %}
				<a class="projet-card" href="{{ path('projet_show', {id: projet.id}) }}">
					<h3>{{ projet.titre }}</h3>
				</a>
			{% else %}
				<p>Aucun projet pour le moment.</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}
