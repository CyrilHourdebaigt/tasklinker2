{% extends 'base-logout.html.twig' %}

{% block title %}S’inscrire
{% endblock %}

{% block body %}
	<div class="auth-card auth-form">
		<h1 class="auth-title auth-center">S’inscrire</h1>

		{{ form_start(registrationForm, {'attr': {'class': 'auth-form-content'}}) }}

		{{ form_row(registrationForm.nom) }}
		{{ form_row(registrationForm.prenom) }}
		{{ form_row(registrationForm.email) }}

		{{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}

		<button type="submit" class="auth-submit">Continuer</button>

		{{ form_end(registrationForm) }}

		<p class="auth-bottom">
			Vous avez déjà un compte ?
		</p>
	</div>
{% endblock %}
